<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_dark"
    tools:context=".ClickedItem">

    <ImageView
        android:id="@+id/clicked_img"
        android:layout_width="411dp"
        android:layout_height="309dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/clicked_food_name"
        android:layout_width="175dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toBottomOf="@+id/clicked_food_price"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="40sp"
        android:textColor="#fff"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clicked_img"
        app:layout_constraintVertical_bias="0.776" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toBottomOf="@+id/clicked_food_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="50sp"
        android:textColor="#fff"
        android:text="Price:"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clicked_img"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="96dp"
        android:layout_weight="2"
        android:text="Food:"
        android:textSize="50sp"
        android:textColor="#fff"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/clicked_food_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clicked_img"
        app:layout_constraintVertical_bias="0.777" />

    <TextView
        android:id="@+id/clicked_food_price"
        android:layout_width="175dp"
        android:layout_height="96dp"
        android:layout_weight="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:textSize="50sp"
        android:textColor="#fff"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clicked_img"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>